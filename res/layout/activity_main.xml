<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F53"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utad.baco.MainActivity" >

    <ImageView
        android:id="@+id/wine_image"
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/wine_description"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/vegaval" />

    <TextView
        android:id="@+id/txt_winename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/wine_image"
        android:paddingLeft="5dp"
        android:text="txt_winename" />

    <TextView
        android:id="@+id/txt_winehouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_winename"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_winename"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:text="txt_winehouse" />

    <TextView
        android:id="@+id/txt_typewine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_winename"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_winehouse"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="5dp"
        android:text="txt_typewine" />
    
    <RatingBar
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_winename"
        android:layout_below="@+id/txt_typewine"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingLeft="5dp"
        android:stepSize="1" />

    <LinearLayout
        android:id="@+id/grapes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wine_image"
        android:layout_alignLeft="@+id/txt_winename"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rating"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp" >
        
    <TextView
            android:id="@+id/txt_listgrapes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/variety_grapes"
            android:textStyle="bold|italic"
            android:textColor="#000" />
    </LinearLayout>
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wine_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/wine_image"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/txt_wine_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wine_Notes"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </ScrollView>




</RelativeLayout>