<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF0066"
    tools:context="com.utad.baco.MainActivity" >

    <ImageView
        android:id="@+id/wine_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="bottom|right"
        android:contentDescription="@string/wine_description"
        android:src="@drawable/vegaval" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@android:color/white">

    <Button
        android:id="@+id/btn_vegaval"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:onClick="changeImage"
        android:text="@string/vegaval" />



<Button
    android:id="@+id/btn_valdelacasa"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:onClick="changeImage"
    android:text="@string/valdelacasa" />
</LinearLayout>

</FrameLayout>